{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2021",
    "module": "esnext",
    "lib": [
      "es2021",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@luftschloss/body": [
        "packages/body/src/index.ts"
      ],
      "@luftschloss/client": [
        "packages/client/src/index.ts"
      ],
      "@luftschloss/mocking": [
        "packages/mocking/src/index.ts"
      ],
      "@luftschloss/openapi": [
        "packages/openapi/src/index.ts"
      ],
      "@luftschloss/proxy": [
        "packages/proxy/src/index.ts"
      ],
      "@luftschloss/schema-generator": [
        "packages/schema-generator/src/index.ts"
      ],
      "@luftschloss/server": [
        "packages/server/src/index.ts"
      ],
      "@luftschloss/static": [
        "packages/static/src/index.ts"
      ],
      "@luftschloss/testing": [
        "packages/testing/src/index.ts"
      ],
      "@luftschloss/validation": [
        "packages/validation/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
