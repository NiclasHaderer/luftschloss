{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "target": "ES2021",
    "module": "esnext",
    "lib": ["ES2021"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@luftschloss/client": ["packages/client/src/index.ts"],
      "@luftschloss/common": ["packages/common/src/index.ts"],
      "@luftschloss/mocking": ["packages/mocking/src/index.ts"],
      "@luftschloss/npm-publish": ["tools/npm-publish/src/index.ts"],
      "@luftschloss/openapi": ["packages/openapi/src/index.ts"],
      "@luftschloss/openapi-schema": ["packages/openapi-schema/src/index.ts"],
      "@luftschloss/proxy": ["packages/proxy/src/index.ts"],
      "@luftschloss/server": ["packages/server/src/index.ts"],
      "@luftschloss/static": ["packages/static/src/index.ts"],
      "@luftschloss/testing": ["packages/testing/src/index.ts"],
      "@luftschloss/validation": ["packages/validation/src/index.ts"],
      "@luftschloss/validation-interfaces": ["packages/validation-interfaces/src/index.ts"],
      "router": ["packages/router/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
