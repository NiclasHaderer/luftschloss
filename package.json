{
  "name": "luftschloss",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build:c": "turbo run build",
    "build": "yarn workspaces foreach -ti --exclude luftschloss run build",
    "build:w": "yarn run build && yarn workspaces foreach -pi --exclude luftschloss run build -w",
    "clean": "rm -r node_modules/.cache/turbo; yarn workspaces foreach -p run clean",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.12.0",
    "eslint-plugin-jsdoc": "^39.3.2",
    "eslint-plugin-workspaces": "^0.7.0",
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "turbo": "^1.1.10",
    "typescript": "^4.7.2"
  },
  "packageManager": "yarn@3.2.0"
}
