{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "_packages/validation/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/_packages/validation",
        "main": "_packages/validation/src/index.ts",
        "tsConfig": "_packages/validation/tsconfig.lib.json",
        "assets": ["_packages/validation/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["_packages/validation/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/_packages/validation"],
      "options": {
        "jestConfig": "_packages/validation/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
